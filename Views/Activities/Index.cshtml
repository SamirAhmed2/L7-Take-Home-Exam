@model IEnumerable<ActivityTracker.Models.Activity>

@{
    ViewData["Title"] = "All Activities";
}

<h1 class="mt-3">All Activities</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Activity</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>@item.Notes</td>
            </tr>
        }
    </tbody>
</table>
